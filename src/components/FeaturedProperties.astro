---
// src/components/FeaturedProperties.astro
import PropertyCard from './PropertyCard.astro';

const featuredProperties = [
  {
    id: 1,
    title: "Luxury Downtown Apartment",
    location: "123 Main St, Downtown",
    price: 2500,
    image: "/images/sample_property.jpg",
    features: ["2 Beds", "2 Baths", "1,200 sqft"]
  },
  // Add more featured properties as needed
];
---

<section class="featured-properties">
  <div class="container">
    <h2>Featured Properties</h2>
    <div class="property-grid">
      {featuredProperties.map(property => (
        <PropertyCard {...property} />
      ))}
    </div>
  </div>
</section>

<style>
  .featured-properties {
    padding: 4rem 2rem;
    background: #f8f9fa;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  h2 {
    text-align: center;
    margin-bottom: 2rem;
  }

  .property-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }
</style>
