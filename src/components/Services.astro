---
// src/components/Services.astro
import ServiceCard from './ServiceCard.astro';

const services = [
  {
    title: "Property Management",
    description: "Full-service property management including tenant screening, rent collection, and maintenance coordination.",
    icon: "building"
  },
  {
    title: "Tenant Screening",
    description: "Comprehensive background checks, credit reports, and rental history verification for quality tenants.",
    icon: "user-check"
  },
  {
    title: "Maintenance",
    description: "24/7 emergency maintenance response and preventive maintenance programs to protect your investment.",
    icon: "tools"
  }
];
---

<section class="services-section">
  <div class="hero">
    <h1>Our Services</h1>
  </div>
  <div class="container">
    <div class="services-grid">
      {services.map((service) => (
        <ServiceCard {...service} />
      ))}
    </div>
  </div>
</section>

<style>
  .hero {
    background: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)),
                url('/images/homepage_background.jpg');
    background-size: cover;
    background-position: center;
    height: 300px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    margin-bottom: 2rem;
  }

  .hero h1 {
    font-size: 2.5rem;
    color: white;
    text-align: center;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
  }

  .services-section {
    padding: 0 0 4rem 0;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }
</style>
