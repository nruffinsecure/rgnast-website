---
// src/components/PropertyGrid.astro
import PropertyCard from './PropertyCard.astro';

interface Property {
    id?: number;
    title: string;
    type: string;
    status: string;
    price: number;
    location: string;
    image: string;
    features: string[];
}

const { properties } = Astro.props;
---

<div class="property-grid">
  {properties.map((property: Property) => (
    <PropertyCard {...property} />
  ))}
</div>

<style>
  .property-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    padding: 2rem 0;
  }
</style>
