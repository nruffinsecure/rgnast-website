---
// src/pages/properties.astro
import Layout from '../layouts/MainLayout.astro';
import PropertyGrid from '../components/PropertyGrid.astro';
import PropertyFilter from '../components/PropertyFilter.astro';

const properties = [
  {
    title: "Luxury Downtown Apartment",
    type: "residential",
    status: "available",
    price: 2500,
    location: "Downtown",
    image: "/images/sample_property.jpg",
    features: ["2 Beds", "2 Baths", "1,200 sqft"]
  }
];
---

<Layout title="Our Properties - RGNAST Group">
  <div class="hero">
    <h1>Our Properties</h1>
  </div>
  <div class="properties-container">
    <PropertyFilter />
    <PropertyGrid properties={properties} />
  </div>
</Layout>

<style>
  .hero {
    background: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)),
                url('/images/homepage_background.jpg');
    background-size: cover;
    background-position: center;
    height: 300px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    margin-bottom: 2rem;
  }

  .hero h1 {
    font-size: 2.5rem;
    color: white;
    text-align: center;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
  }

  .properties-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
  }
</style>
