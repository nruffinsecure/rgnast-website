---
// src/pages/services/tenant-screening.astro
import Layout from '../../layouts/MainLayout.astro';
---

<Layout title="Tenant Screening Services - RGNAST Group">
  <div class="service-detail">
    <div class="service-header">
      <h1>Tenant Screening Services</h1>
      <div class="header-underline"></div>
    </div>
    
    <div class="content">
      <div class="service-section">
        <h2>Comprehensive Screening Process</h2>
        <div class="divider"></div>
        <div class="service-grid">
          <div class="service-item">
            <i class="fas fa-user-check"></i>
            <h3>Credit & Background</h3>
            <p>Thorough credit history and background verification</p>
          </div>
          <div class="service-item">
            <i class="fas fa-history"></i>
            <h3>Rental History</h3>
            <p>Complete past rental history verification</p>
          </div>
          <div class="service-item">
            <i class="fas fa-briefcase"></i>
            <h3>Employment</h3>
            <p>Detailed employment and income verification</p>
          </div>
          <div class="service-item">
            <i class="fas fa-id-card"></i>
            <h3>Identity</h3>
            <p>Comprehensive identity verification process</p>
          </div>
        </div>
      </div>

      <div class="service-section">
        <h2>Why Choose Our Screening Services?</h2>
        <div class="divider"></div>
        <div class="benefits-grid">
          <div class="benefit-item">
            <i class="fas fa-bolt"></i>
            <h3>Fast Results</h3>
            <p>Quick and reliable screening reports</p>
          </div>
          <div class="benefit-item">
            <i class="fas fa-laptop"></i>
            <h3>Advanced Technology</h3>
            <p>State-of-the-art screening solutions</p>
          </div>
          <div class="benefit-item">
            <i class="fas fa-shield-alt"></i>
            <h3>Comprehensive Reports</h3>
            <p>Detailed and thorough reporting options</p>
          </div>
        </div>
      </div>

      <div class="cta-container">
        <a href="/contact" class="cta-button">Get Started Today</a>
      </div>
    </div>
  </div>
</Layout>

<style>
  .service-detail {
    max-width: 1200px;
    margin: 0 auto;
    padding: 4rem 2rem;
  }

  .service-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  h1 {
    font-size: 2.5rem;
    color: var(--text-color);
    margin-bottom: 1rem;
  }

  .header-underline {
    height: 4px;
    width: 100px;
    background: var(--primary-color);
    margin: 0 auto;
  }

  .content {
    background: white;
    padding: 3rem;
    border-radius: 1rem;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  .service-section {
    margin-bottom: 4rem;
  }

  h2 {
    font-size: 2rem;
    color: var(--text-color);
    margin-bottom: 1rem;
  }

  .divider {
    height: 3px;
    background: var(--primary-color);
    width: 100%;
    margin-bottom: 2rem;
  }

  .service-grid, .benefits-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
  }

  .service-item, .benefit-item {
    text-align: center;
    padding: 2rem;
    background: #f8f9fa;
    border-radius: 0.5rem;
    transition: transform 0.3s ease;
  }

  .service-item:hover, .benefit-item:hover {
    transform: translateY(-5px);
  }

  i {
    font-size: 2rem;
    color: var(--primary-color);
    margin-bottom: 1rem;
  }

  h3 {
    font-size: 1.25rem;
    margin-bottom: 0.5rem;
    color: var(--text-color);
  }

  p {
    color: #666;
    line-height: 1.6;
  }

  .cta-container {
    text-align: center;
    margin-top: 3rem;
  }

  .cta-button {
    display: inline-block;
    padding: 1rem 2.5rem;
    background: var(--primary-color);
    color: white;
    text-decoration: none;
    border-radius: 0.5rem;
    font-size: 1.1rem;
    font-weight: 600;
    transition: all 0.3s ease;
  }

  .cta-button:hover {
    background: var(--secondary-color);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(46, 125, 50, 0.2);
  }

  @media (max-width: 768px) {
    .service-grid, .benefits-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
