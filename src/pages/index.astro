---
// src/pages/index.astro
import Layout from '../layouts/MainLayout.astro';
import Hero from '../components/Hero.astro';
import FeaturedProperties from '../components/FeaturedProperties.astro';
import Services from '../components/Services.astro';
---

<Layout title="RGNAST Group - Professional Property Management">
  <Hero 
    title="Professional Property Management Solutions"
    subtitle="Maximizing Your Investment Potential"
  />
  <FeaturedProperties />
  <Services />
  <section class="cta-section">
    <h2>Ready to Transform Your Property Management?</h2>
    <a href="/contact" class="cta-button">Get Started Today</a>
  </section>
</Layout>

<style>
  .cta-section {
    text-align: center;
    padding: 4rem 2rem;
    background: #f5f5f5;
  }
  .cta-button {
    display: inline-block;
    padding: 1rem 2rem;
    background: #2e7d32;  /* Changed from blue to green */
    color: white;
    border-radius: 0.5rem;
    text-decoration: none;
    margin-top: 1rem;
    transition: background-color 0.2s;
  }
  .cta-button:hover {
    background: #1b5e20;  /* Darker green for hover state */
  }
</style>
